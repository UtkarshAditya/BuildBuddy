# BuildBuddy Backend - Production Settings

# Security
SECRET_KEY=change-this-to-a-very-long-random-string-min-50-characters
DEBUG=False

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://user:password@localhost:5432/buildbuddy

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# CORS (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Settings (optional - defaults are fine)
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Email (optional - for password reset, etc.)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
